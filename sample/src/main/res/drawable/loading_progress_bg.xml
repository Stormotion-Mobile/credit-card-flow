<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="450">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="14.0"
        android:useLevel="false">

        <gradient
            android:angle="0"
            android:centerColor="#24A0D2"
            android:endColor="#46c8dc"
            android:startColor="#0178c8"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>